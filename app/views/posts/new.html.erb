<h1>New Post</h1>
<%= form_for @post do |form| %>
  <%= form.label :title %>
  <br>
  <%= form.text_field :title %>
  <br>
  <%= form.label :message %>
  <br>
  <%= form.text_field :message %>
  <br>
  <%= form.label :image %>
  <br>
  <%= form.file_field :image %>
  <br>

  <%= form.submit "Submit" %>
<% end %>
